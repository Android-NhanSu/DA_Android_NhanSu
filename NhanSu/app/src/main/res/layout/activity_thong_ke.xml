<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThongKe">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/btn_trove"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:background="?attr/homeAsUpIndicator" />


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Thống kê ngày nghĩ"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="#032C35">

            <SearchView
                android:id="@+id/timkimtheongaythang"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:background="@drawable/duongcong"
                android:gravity="center"
                android:iconifiedByDefault="false"
                android:queryHint="Tìm kiếm tháng" />
        </FrameLayout>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchar"
            android:layout_width="match_parent"
            android:layout_height="364dp"></com.github.mikephil.charting.charts.BarChart>
    </LinearLayout>
</RelativeLayout>